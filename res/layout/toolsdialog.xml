<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/SketchbookDialogBorder">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/SketchbookDialog">

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
		<ImageView android:id="@+id/toolsdialog_preset1" android:tag="0" android:src="@drawable/desktoppreset" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_preset2" android:tag="0" android:src="@drawable/desktoppreset" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_brush" android:tag="1" android:src="@drawable/desktopbrush" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_color" android:tag="1" android:src="@drawable/desktopcolor" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_pattern" android:tag="0" android:src="@drawable/desktoppattern" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_operation" android:tag="0" android:src="@drawable/desktopoperation" style="@style/SketchbookDesktop"></ImageView>
		<ImageView android:id="@+id/toolsdialog_undo" android:tag="1" android:src="@drawable/desktopundo" style="@style/SketchbookDesktop"></ImageView>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
		<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
				<ImageView android:id="@+id/toolsdialog_pressure" android:src="@drawable/iconpressure" style="@style/SketchbookButton"></ImageView>
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/toolsdialog_pressurepop" android:visibility="invisible" style="@style/SketchbookTextTools" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"></TextView>
		</RelativeLayout>
		<ImageView android:src="@drawable/iconorientationoff" android:id="@+id/toolsdialog_orientation" style="@style/SketchbookButton"></ImageView>
		<ImageView android:src="@drawable/iconvalidon" android:id="@+id/toolsdialog_9" style="@style/SketchbookButton"></ImageView>
	</LinearLayout>

</LinearLayout>
</LinearLayout>